{
  "expo": {
    "name": "Pro Pipe Manager",
    "slug": "propipe-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B63B4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.propipesteel.manager"
    },
    "android": {
      "package": "com.propipesteel.manager",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B63B4"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
